#----------------------------------
# General Definitions
# ---------------------------------
[general]

# Specifies where offlineimap is to store its metadata
metadata = ~/.mail/.offlineimap

accounts = jasonpoon, ubc.badm
maxsyncaccounts = 2

ui = Noninteractive.Basic

realdelete = True
 
# ---------------------------------
# Accounts
# ---------------------------------
# jasonpoon.ca
[Account jasonpoon]

localrepository = jasonpoon-Local
remoterepository = jasonpoon-Remote

[Repository jasonpoon-Local]
type = Maildir 
localfolders = ~/.mail/jasonpoon.ca

[Repository jasonpoon-Remote]
type = IMAP 
remotehost = imap.gmail.com
remoteport = 993
ssl = yes 
remoteuser = me@jasonpoon.ca
remotepassfile = ~/.mail/password/jasonpoon.ca
maxconnections = 3

# ubc.badm@gmail.com
[Account ubc.badm]

localrepository = ubc.badm-Local
remoterepository = ubc.badm-Remote

[Repository ubc.badm-Local]
type = Maildir 
localfolders = ~/.mail/ubc.badm@gmail.com

[Repository ubc.badm-Remote]
type = IMAP 
remotehost = imap.gmail.com
remoteport = 993
ssl = yes 
remoteuser = ubc.badm@gmail.com
remotepassfile = ~/.mail/password/ubc.badm
maxconnections = 3

