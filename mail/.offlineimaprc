#----------------------------------
# General Definitions
# ---------------------------------
[general]

# Specifies where offlineimap is to store its metadata
metadata = ~/.mail/.offlineimap

accounts = mr.j.poon, jasonpoon, ubc.badm
maxsyncaccounts = 2

ui = Noninteractive.Basic

realdelete = True
 
# ---------------------------------
# Accounts
# ---------------------------------
# mr.j.poon@gmail.com
[Account mr.j.poon]

localrepository = mr.j.poon-Local
remoterepository = mr.j.poon-Remote

[Repository mr.j.poon-Local]
type = Maildir 
localfolders = ~/.mail/mr.j.poon@gmail.com

[Repository mr.j.poon-Remote]
type = IMAP 
remotehost = imap.gmail.com
remoteport = 993
ssl = yes 
remoteuser = mr.j.poon@gmail.com
remotepassfile = ~/.mail/password/mr.j.poon
maxconnections = 2

# jasonpoon.ca
[Account jasonpoon]

localrepository = jasonpoon-Local
remoterepository = jasonpoon-Remote

[Repository jasonpoon-Local]
type = Maildir 
localfolders = ~/.mail/jasonpoon.ca

[Repository jasonpoon-Remote]
type = IMAP 
remotehost = imap.gmail.com
remoteport = 993
ssl = yes 
remoteuser = me@jasonpoon.ca
remotepassfile = ~/.mail/password/jasonpoon.ca
maxconnections = 2

