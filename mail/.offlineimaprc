#----------------------------------
# General Definitions
# ---------------------------------
[general]

# Specifies where offlineimap is to store its metadata
metadata = ~/.mail/.offlineimap

accounts = mr.j.poon, ubc.badm
maxsyncaccounts = 2

ui = Noninteractive.Basic

realdelete = True
 
# ---------------------------------
# Accounts
# ---------------------------------
[Account mr.j.poon]

localrepository = mr.j.poon-Local
remoterepository = mr.j.poon-Remote

[Repository mr.j.poon-Local]
type = Maildir 
localfolders = ~/.mail/mr.j.poon@gmail.com

[Repository mr.j.poon-Remote]
type = IMAP 
remotehost = imap.gmail.com
remoteport = 993
ssl = yes 
remoteuser = mr.j.poon@gmail.com
remotepassfile = ~/.mail/password-mr.j.poon
maxconnections = 2

[Account ubc.badm]

localrepository = ubc.badm-Local
remoterepository = ubc.badm-Remote

[Repository ubc.badm-Local]
type = Maildir 
localfolders = ~/.mail/ubc.badm@gmail.com

[Repository ubc.badm-Remote]
type = IMAP 
remotehost = imap.gmail.com
remoteport = 993
ssl = yes 
remoteuser = ubc.badm@gmail.com
remotepassfile = ~/.mail/password-ubc.badm
maxconnections = 2

