[user]
	name = Jason (Linux)
    email = git@jasonpoon.ca
[alias]
    st = status
    ci = commit
    co = checkout
    br = branch
[color]
    diff = auto
    status = auto
    branch = auto
    interative = auto
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold 
    old = cyan bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[branch]
    autosetupmerge = true
[core]
    excludesfile = /home/jason/dotfiles/.gitignore
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
